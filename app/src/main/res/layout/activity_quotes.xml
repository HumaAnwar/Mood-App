<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/img_1"
    android:padding="@dimen/_12sdp"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_marginTop="@dimen/_15sdp"
        android:id="@+id/backarrow"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Angry"
        android:id="@+id/name"
        android:textColor="@color/white"
        android:textSize="@dimen/_16sdp"
        android:fontFamily="@font/amiribolditalic"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I'm Feeling Angry"
        android:id="@+id/namedetail"
        android:textColor="@color/white"
        android:layout_below="@id/name"
        android:textSize="@dimen/_16sdp"
        android:fontFamily="@font/amiribolditalic"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:id="@+id/real"
        android:layout_below="@id/namedetail">
        <ImageView
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/cartoon"
            android:id="@+id/moodemoji"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/real"
        android:id="@+id/card"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        app:cardCornerRadius="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_play_arrow_24"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_17sdp"
                android:id="@+id/playPauseButton"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading"
            android:id="@+id/ayat"
            android:layout_below="@id/playPauseButton"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/amiribolditalic"
            android:gravity="center_horizontal"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading"
            android:id="@+id/translation"
            android:textColor="@color/black"
            android:layout_below="@id/ayat"
            android:textSize="@dimen/_16sdp"
            android:fontFamily="@font/amiribolditalic"
            android:gravity="center_horizontal"/>
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>